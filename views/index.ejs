<div class="container">
  <h1 class="text-center">The Original Pokemon</h1>
  <h3 class="text-center">Click to add to your favorites!</h3>
  <p class="text-center">
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2 class="pokeNameHome"><%= pokemon.name %></h2>

      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary" id="button" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
